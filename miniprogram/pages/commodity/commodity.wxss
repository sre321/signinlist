/* pages/commodity/commodity.wxss */

.add-page {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #676767;
  padding: 30rpx 26rpx;
}

.addImage {
  border: 1rpx solid #eee;
  height: 230rpx;
  width: 100%;
}

.image {
  width: 230rpx;
}

.mod-a {
  padding: 1 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
  border-radius: 12rpx;
  margin-top: 10rpx;
}

.mod {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
}

.t-name .input {
  width: 100%;
  overflow: hidden;
  font-size: 30rpx;
}

.create {
  margin-top: 60rpx;
  padding: 0 26rpx;
}

.create .btn {
  line-height: 80rpx;
  background-color: #2fcc85;
  color: #fff;
}
