/* pages/newTask/newTask.wxss */

.add-page {
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #676767;
  padding: 30rpx 26rpx;
}

.mod-a {
  padding: 1 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
  border-radius: 12rpx;
}

.mod {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  padding: 0 30rpx;
}

.t-name .input {
  width: 100%;
  overflow: hidden;
  color: #b2b2b2;
  font-size: 30rpx;
}

.mt5 {
  margin-top: 5rpx;
}

.create {
  margin-top: 60rpx;
  padding: 0 26rpx;
}

.create .btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2fcc85;
  color: #fff;
}

.create .button-hover {
  background-color: #2caf6d;
  color: #aadfc4;
}

.create .disabled {
  opacity: 0.4;
}

.area {
  padding: 20rpx;
  font-size: 30rpx;
  height: 160rpx;
}

.point {
  width: 130rpx;
  background-color: #fff;
  padding: 4rpx 20rpx;
  border-radius: 12rpx;
  text-align: center;
}
