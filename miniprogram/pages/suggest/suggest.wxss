/* pages/suggest/suggest.wxss */
.add-page {
  display: flex;
  flex-direction: column;
  font-size: 36rpx;
  color: #676767;
  padding: 30rpx 26rpx;
}
.mod-a {
  padding: 0 20rpx;
  border: 1px solid #f0f0f0;
  background-color: #fff;
  border-radius:12rpx;
}

.mod {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
}
.t-name .input {
  width: 500rpx;
  overflow: hidden;
  color: #b2b2b2;
  height: 44rpx;
  font-size: 36rpx;
}
.mt20 {
  margin-top: 20rpx;
}
.area{
  padding:30rpx;
  font-size:36rpx;
  height: 400rpx;
}
.create {
  margin-top: 80rpx;
  padding: 0 26rpx;
}

.create .btn {
  height: 80rpx;
  line-height: 80rpx;
  background-color: #2fcc85;
  color: #fff;
}

.create .button-hover {
  background-color: #2caf6d;
  color: #aadfc4;
}

.create .disabled {
  opacity: 0.4;
}